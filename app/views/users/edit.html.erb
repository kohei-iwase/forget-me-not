  <div class="container content">
    <div class="row content">
      <div class="col-xs-3 content-box">
        <h2 class="form-header-title">プロフィール編集</h2>
          <div class="form-body">
              <%= form_for(@user) do |f| %>
              <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputName">Name</label>
                   <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
                    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
              </div>
              <div class="form-group has-icon">
                <div class="user-edit-image">
              </div>
            <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
                  <%= attachment_image_tag @user, :image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
                      </div>
                      <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
                        <%= f.attachment_field :image, placeholder: "プロフィール画像", class: "user-edit-form" %>
                            </div>
                <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputIntroduction">プロフィール</label>
                   <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputIntroduction", placeholder:"プロフィール"%>
              </div>
                              <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
              <% end %>
           </div>
      </div> 
    </div>
  </div>