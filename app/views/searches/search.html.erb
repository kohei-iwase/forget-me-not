<div class="content-box">
  <div class="row">

<h3><strong>「<%= @content %>」</strong>の検索結果</h3>
<hr>
      <div class ="paginate">
        <%= paginate @datas %>
      </div>
	<% if @model == 'user' %>
			<% if @datas.any? %>
				<% @datas.each do |data| %>
					<ul class="searched-box">
						<%= link_to user_path(data) do %>
						<div class="images">
							<%= attachment_image_tag data, :image, class: "img-circle inline-box", fallback: "users/no_image.png" %>
						</div>
						<div class="profiles">
							<h4>名前：<%= data.name %></h4>
							<h4>自己紹介</h4>
							<%= data.introduction %>
						</div>
						<% end %>
					</ul>
					<hr>
				<% end %>
			<% end %>
	<% elsif @model == 'portrait_name' %>
		<% if @datas.any? %>
				<% @datas.each do |data| %>
					<ul class="searched-box">
						<%= link_to portrait_path(data) do %>
						<div class ="images">
    						<%= attachment_image_tag data, :image,class: "img-circle inline-box", fallback: "pets/no_image.png"%>
    					</div>
    					<div class ="profiles">
							<h4>名前：<%= data.name %></h4>
							<h4>種類：<%= data.species %></h4>
						</div>
						<% end %>
					</ul>
					<hr>
				<% end %>
			<% end %>
	<% elsif @model == 'portrait_species' %>
		<% if @datas.any? %>
				<% @datas.each do |data| %>
					<ul class="searched-box">
						<%= link_to portrait_path(data) do %>
						<div class ="images">
							<%= attachment_image_tag data, :image,class: "img-circle inline-box",fallback: "pets/no_image.png"%>
						</div>
						<div class ="profiles">
							<h4>名前：<%= data.name %></h4>
							<h4>種類：<%= data.species %></h4>
						</div>
						<% end %>
					</ul>
					<hr>
				<% end %>
			<% end %>
	<% else @model == 'memory' %>
		<% if @datas.any? %>
				<% @datas.each do |data| %>
					<ul class="searched-box">
						<%= link_to portrait_memory_path(data.portrait_id,data) do %>
						<div class ="images">
					          <%= attachment_image_tag data, :image,class: "img-circle inline-box", fallback: "pets/cat.png"%>
					      </div>
					    <div class="profiles">
							<h4>タイトル：<%= data.title %></h4>
							<h4>いつ？：<%= data.when %></h4>
						</div>
						<% end %>
					</ul>
					<hr>
				<% end %>
			<% end %>

	<% end %>
	<div class ="paginate">
        <%= paginate @datas %>
    </div>
</div>
</div>