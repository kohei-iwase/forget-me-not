
<div class="content-box">
  <div class="row album">
   <div class="ribbon6">
      <h2><%= @portrait.name %>について</h2>
   </div>
  <div class="row album">
    <div class="subtitle">
      <h3>写真</h3>
    </div>
    <div class="pet-image">
    <%= attachment_image_tag @portrait, :image, width:"70%",fallback: "pets/no_image.png"%>
    </div>
  </div>
  <div class="pet-profile">
    <h3>プロフィール</h3>
    <%= render 'portraits/table', portrait: @portrait %>
      <br>
    <% if @portrait.user == current_user %>
      <div class="buttons">
        <%= link_to "編集", edit_portrait_path(@portrait), class: "btn btn-success" %>
        <% else %>
        <%= render 'bouquets/bouquet', portrait: @portrait %>
      </div>
     <% end %>
   </div>

  </div>
    <hr>
  <div class="row memories">
      <div class="subtitle">
        <h3><%= @portrait.name%>との思い出(<%= @portrait.memories.count %> 個）</h3>
      </div>
      <%= render 'memories/index', portrait: @portrait %>
    </div>
  <hr>
    <% if @portrait.user == current_user %>
    <div class="row new_memories">
        <div class="subtitle">
          <h3>思い出を加える</h3>
        </div>
        <%= render 'memories/form', portrait:@portrait, memory: @memory%>
    </div>
  <% end %>
</div>