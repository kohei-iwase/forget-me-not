<div class="index">
   <div class ="paginate">
      <%= paginate @portraits %>
    </div>
  <div class="album-index">
    <% @portraits.reverse_each do |portrait| %>
    <%= link_to portrait_path(portrait) do %>
    <div class="subtitle"> 
      <h3>
        <%= portrait.name %>について
      </h3>
    </div>
  <div class="pet-image">
    <%= attachment_image_tag portrait, :image, width:"70%", fallback: "pets/no_image.png"%>
  </div>

    <% end %>
    <h3>この子について</h3>
      <p>
        <%= portrait.more_about_me %>
      </p>
      <%= render 'bouquets/bouquet', portrait: portrait %>
            <% if portrait.user == current_user %>
      <div class="buttons">
            <%= link_to "編集", edit_portrait_path(portrait), class: "btn btn-success" %>
      </div>
        <% end %>
  　</div>
<div class="memory-index">
  <div class="subtitle">
       <h3><%= portrait.name%>との思い出(<%= portrait.memories.count %> 個）</h3>
    </div>
    <%= render 'memories/index', portrait: portrait %>
  </div>
<hr>
  <% end %>
  <div class ="paginate">
    <%= paginate @portraits %>
  </div>
</div>


