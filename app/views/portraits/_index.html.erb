<div class ="row album">
  <% @portraits.each do |portrait| %>
  <div class="row album">
  <div class="col-xs-6 portrait-box">
    <%= link_to portrait_path(portrait) do %>
      <h2>
        <i class="fa fa-bell"></i>
        <%= portrait.name %>
      </h2>
      <%= attachment_image_tag portrait, :image, width: "90%" %>
    <% end %>
    <h3>僕について</h3>
      <p>
        <%= portrait.more_about_me %>
      </p>
      <%= render 'bouquets/bouquet', portrait: portrait %>
            <% if portrait.user.id == current_user.id %>
          <div class="edit">
            <%= link_to "編集", edit_portrait_path(portrait), class: "btn btn-success" %>
          </div>
        <% end %>
  </div>
  <div class="col-xs-5 memories-list">
    <div class="ribbon6">
      <h2><%= link_to "#{portrait.name}との思い出", portrait_memories_path(portrait.id) %></h2>
    </div>
    <%= render 'memories/index', portrait: portrait %>
  </div>
</div>
  <% end %>
</div>

