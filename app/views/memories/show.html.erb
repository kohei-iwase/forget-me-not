<div class="container">
  <div class="row">
        <div class="memory-box">
          <table class="memory-table">
            <tbody>
            <tr>
              <td>
                <h4><%= @memory.title %></h4>
              </td>
            </tr>
            <tr>
              <td>
              <%= attachment_image_tag @memory, :image, width: "90%" %>
              </td>
            </tr>
            <tr>
              <td>
                <h4><%= @memory.when %></h4>
              </td>
            </tr>
            <tr>
              <td>
                <h5><%= @memory.memory %></h5>
              </td>
            </tr>
            </tbody>
          </table>
          <% if @user = current_user %>
            <div class="edit">
              <%= link_to "思い出に書き加える", edit_portrait_memory_path(@portrait,@memory), class: "btn btn-success" %>
              <%= link_to "この思い出と別れる", portrait_memory_path(@portrait,@memory), method: :delete,class: "btn btn-danger" %>
            </div>
      <% end %>
        </div>
        <%= link_to "アルバムに戻る", portrait_path(@portrait), class: "btn btn-primary" %>
      </div>
    </div>